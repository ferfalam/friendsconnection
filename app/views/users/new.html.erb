<div class="container my-2">
    <div class="row">
        <div class="col col-md-6 d-flex align-self-center">
            <div class="company-text">
                <h2 class="font-weight-bold text-primary">friends connection</h2>
                <p>Be connect with your friends with friends connection, do post and share picture</p>
                <% if @user.errors.any? %> 
                    <div class="text-danger"> 
                        <ul> 
                            <% @user.errors.full_messages.each do |message| %> 
                                <li><%= message %></li> 
                            <% end %> 
                        </ul> 
                    </div> 
                <% end %> 
            </div>
        </div>
        <div class="col col-md-6 form">
            <%= form_with(model: @user, local: true) do |f| %>
                <div class="form-group">
                    <%= f.text_field :firstname, class:"form-control", placeholder:"Firstname" %>
                </div>
                <div class="form-group">
                    <%= f.text_field :lastname, class:"form-control", placeholder:"Lastname" %>
                </div>
                <div class="form-group">
                    <%= f.email_field :email, class:"form-control", placeholder:"Email" %>
                </div>
                <div class="form-group">
                    <%= f.label :birthday, "Birthday" %>
                    <%= f.date_field :birthday, class:"form-control" %>
                </div>
                <div class="form-group">
                    <div><%= f.label "Gender" %></div> 
                    <div class="form-check form-check-inline">
                        <%= f.radio_button :gender, "male", checked: true%> 
                        <%= f.label "Male", class:"form-check-label" %>
                    </div>
                    <div class="form-check form-check-inline">
                        <%= f.radio_button :gender, "female" %> 
                        <%= f.label "Female", class:"form-check-label" %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirm Password" %>
                </div>
                <div class="text-center">
                    <%= f.submit "Submit", class:"btn btn-primary" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
