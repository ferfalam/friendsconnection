
<div class="container my-2">
    <div class="row">
        <div class="col col-md-6 d-flex align-self-center">
            <div class="company-text">
                <h2 class="font-weight-bold text-primary">friends connection</h2>
                <p>Be connect with your friends with friends connection, do post and share picture</p>
                
                <% if flash.any? %>
                    <%flash.each do |key, value|%>
                        <%= content_tag(:div, value, class:"alert alert-#{key}" ) %>
                    <%end%>
                <% end %>
            </div>
        </div>
        <div class="col col-md-6 form">
            <%= form_with(scope: :session,local: true, url: sessions_path) do |f| %>
                <div class="form-group">
                    <%= f.email_field :email, class:"form-control", placeholder:"Email" %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
                </div>
                <div class="text-center">
                    <%= f.submit "Submit", class:"btn btn-primary" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
